{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es6",
    "jsx": "react",
    "baseUrl": ".",
    "module": "esnext",
    "lib": ["es5", "es2015", "es2016", "dom"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true, // Allow default imports from the lib
    "paths": {
      "@static/*": [
        "./static/*"
      ],
      "@*": [
        "src/*"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "./static/**/*"
  ]
}