{
  "extends": [
      "tslint:recommended",
      "tslint-react",
      "tslint-eslint-rules",
      "tslint-consistent-codestyle",
      "tslint-react-hooks"
  ],
  "rules": {
    "arrow-parens": [2, "as-needed"],
    "jsx-boolean-value": ["never"],
    "no-shadowed-variable": false,
    "jsx-no-multiline-js": false
  }
}